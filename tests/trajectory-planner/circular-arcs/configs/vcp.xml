<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
    <label>
        <text>"Peak Values"</text>
    </label>
    <label>
        <text>"X Axis"</text>
    </label>
    <hbox>
        <label>
            <text>"+Acc"</text>
        </label>
        <number>
            <halpin>"pxacc"</halpin>
            <font>("Helvetica",24)</font>
            <format>"+4.4f"</format>
        </number>
        <label>
            <text>"+Vel"</text>
        </label>
        <number>
            <halpin>"pxvel"</halpin>
            <font>("Helvetica",24)</font>
